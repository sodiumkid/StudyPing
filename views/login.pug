extends layout.pug
block csss
  include ./form.css
  
block content
  div(class="field")
    br()
    h1 Sign in
    br()
    if messages.error
      p= messages.error
      
    form(action= "/login" method= "post")
      input(type="text" name="name" placeholder=" Username")
      br()
      br()
      input(type="password" name="password" placeholder=" Password")
      br()
      br()
      input(type="submit" class="sub" value="Login" name="submit")
    br()
    div(class="alternate")
      p Don't have an account? #[a(href="/register") Register]
